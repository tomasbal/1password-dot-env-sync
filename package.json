{
  "name": "1password-dot-env-sync",
  "version": "1.0.5",
  "description": "Sync secrets between .env and 1Password vault",
  "main": "src/index.ts",
  "bin": {
    "1password-env-sync": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "watch": "tsc -w",
    "start": "node dist/cli.js",
    "lint": "tsc",
    "ci": "tsc && pnpm run build",
    "release": "pnpm run ci && changeset publish"
  },
  "keywords": [
    "1password",
    "env",
    "sync",
    "secrets",
    "dotenv",
    ".env",
    "onepassword",
    "one password",
    "1 password",
    "1password dot env sync",
    "1password .env sync"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tomasbal/1password-dot-env-sync"
  },
  "publishConfig": {
    "access": "public"
  },
  "engineStrict": true,
  "author": "Tomislav Balabanov",
  "license": "MIT",
  "dependencies": {
    "@1password/sdk": "^0.1.1",
    "@inquirer/prompts": "^7.0.0",
    "commander": "^12.1.0",
    "diff": "^5.2.0",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/diff": "^5.2.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.2.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  }
}
